
@model AccessControl.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Authentication
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Log in</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Email"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Password"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="RememberMe"></label>
                    <div class="col-sm-10">
                        <input style="margin:10px" asp-for="RememberMe" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <input  class="btn btn-info pull-left" type="submit" value="Sign in" />
                    </div>
                    <div class="col-sm-10">
                </div>
            </div>
        </form>
    </div>
</section>
