@model AccessControl.ViewModels.EditUserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Users
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Update user</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" asp-controller="Users" asp-action="Update">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="NewPassword"></label>
                    <div class="col-sm-10">
                        <input asp-for="NewPassword" placeholder="New password"></" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="NewPasswordConfirm"></label>
                    <div class="col-sm-10">
                        <input asp-for="NewPasswordConfirm" placeholder="Confirm new password" />
                        <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <input class="btn btn-info pull-left" type="submit" value="Save" />
                    </div>
                    <div class="col-sm-10">
                    </div>
                </div>
                <input type="hidden" name="UserId" value="@ViewBag.UserId" />
            </div>
        </form>
    </div>
</section>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
