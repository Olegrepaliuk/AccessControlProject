@model AccessControlModels.Person
<section class="content-header">
    <h1>
        People
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Update Person Info</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/People/Update">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Full name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Position</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Position" placeholder="Position" asp-for="Position">
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="Email" class="form-control" name="Email" value="@Model.Email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Phone" placeholder="Phone" value="@Model.Phone" asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Card key</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="CardKey" placeholder="Card key" value="@Model.CardKey" asp-for="CardKey">
                        <span asp-validation-for="CardKey" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Card valid til</label>
                    <div class="col-sm-10">
                        <input type="datetime" class="form-control" name="CardValidTil" placeholder="Card valid til" value="@Model.CardValidTil" asp-for="CardValidTil">
                        <span asp-validation-for="CardValidTil" class="text-danger"></span>
                    </div>
                </div>


                <div class="">
                    <h4>Access allowed to following rooms</h4>
                    <p>
                        <input type="hidden" name="Id" value="@Model.Id" />
                        @foreach (var room in ViewBag.AllRooms)
                        {
                            <input type="checkbox" name="rooms" value="@room.Id"
                                   @(ViewBag.PersonRooms.Contains(room) ? "checked=\"checked\"" : "") />@room.Name <br />
                            }
                    </p>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-left">Save</button>                
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
